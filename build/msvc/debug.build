config.version = 1
config.cxx = cl /MDd
config.c = cl /MDd

# /Zi in conjunction with precompiled headers (PCH) and build2 may not yield the
# expected results. Instead, we opt for the slightly heavier /Z7 option, which
# serves the same purpose overall.
#
# Additionally, we propagate the /DEBUG flag to generate PDBs, although it is
# unnecessary when using /Z7.
#
config.cc.coptions = /Od /Z7
config.cc.loptions = /DEBUG
